        "import random\n",
        "\n",
        "#generar producción aleatoria para 365\n",
        "produccion = [random.randint(12000, 15500) for i in range(365)]\n",
        "\n",
        "produccion_total = sum(produccion)\n",
        "promedio = produccion_total / len(produccion)\n",
        "\n",
        "print(\"total anual:\", produccion_total)\n",
        "print(\"promedio diario\", round(promedio, 3))"
