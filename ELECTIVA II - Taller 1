    {
      "cell_type": "code",
      "source": [
        "produccion_dos = 18500\n",
        "defectuosos = 420\n",
        "horas_trabajo = 8\n",
        "operarios = 14\n",
        "costo_total = 7800000\n",
        "meta = 160\n",
        "\n",
        "horas_hombres = horas_trabajo * operarios\n",
        "productividad = produccion_dos / horas_hombres\n",
        "tasa_defectos = defectuosos / produccion_dos\n",
        "costo_unitario = costo_total / produccion_dos\n",
        "\n",
        "cumple_meta = productividad >= meta\n",
        "print(\"productividad:\", round(productividad,2))\n",
        "print(\"tasa_defectos:\", round(tasa_defectos*100,2),\"%\")\n",
        "print(\"costo_unitario:\", round(costo_unitario,2))\n",
        "print(\"¿cumple meta?:\", cumple_meta)"
